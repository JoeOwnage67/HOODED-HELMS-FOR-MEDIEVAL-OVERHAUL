<!-- ArmetHooded -->
  <ThingDef ParentName="ArmorHelmetMakeableBase">
    <defName>Joe_ArmetHooded</defName>
    <label>hooded armet</label>
    <description>A finely crafted, ergonomically shaped hooded plate helmet that provides complete protection of the entire head, face,, shaped in such a way to optimize deflection of what would otherwise be direct blows.</description>
    <graphicData>
      <texPath>ArmetHooded/ArmetHooded</texPath>
      <graphicClass>Graphic_Single</graphicClass> 
      <shaderType>CutoutComplex</shaderType>	 
    </graphicData>
    <techLevel>Medieval</techLevel>
    <recipeMaker>
      <recipeUsers>
        <li>ElectricSmithy</li>
        <li>FueledSmithy</li>
        <li>DankPyon_Anvil</li>
      </recipeUsers>
      <skillRequirements>
        <Crafting>12</Crafting>
      </skillRequirements>
      <researchPrerequisite>PlateArmor</researchPrerequisite>
    </recipeMaker>
	    <costList>
        <steel>80</steel>
      </costList>

    <statBases>
      <WorkToMake>25000</WorkToMake>
      <MaxHitPoints>270</MaxHitPoints>
      <Mass>3.5</Mass>
      <StuffEffectMultiplierArmor>1.05</StuffEffectMultiplierArmor>
      <StuffEffectMultiplierInsulation_Cold>0.15</StuffEffectMultiplierInsulation_Cold>
      <StuffEffectMultiplierInsulation_Heat>0.1</StuffEffectMultiplierInsulation_Heat>
      <EquipDelay>10</EquipDelay>
    </statBases>
    <equippedStatOffsets>
      <ShootingAccuracyPawn>-3</ShootingAccuracyPawn>
      <SocialImpact>0.15</SocialImpact>
    </equippedStatOffsets>

		<stuffCategories>
			<li>Fabric</li>
            <li>Leathery</li>
		</stuffCategories>
	  <costStuffCount>25</costStuffCount>

    <apparel>
       <bodyPartGroups>
        <li>FullHead</li>
        
      </bodyPartGroups>
      <wornGraphicPath>ArmetHooded/ArmetHooded</wornGraphicPath>
      <useWornGraphicMask>true</useWornGraphicMask>
      <tags>
        <li>DankPyon_LordHelmet</li>
        <li>DankPyon_Champion</li>
			</tags>
      <layers>
        <li>Overhead</li>
      </layers>
      <defaultOutfitTags>
        <li>Soldier</li>
      </defaultOutfitTags>
    </apparel>
  </ThingDef>

